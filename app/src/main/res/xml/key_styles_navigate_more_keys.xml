<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <switch>
        <case app:keyboardTheme="ICS|KLP">
            <key-style
                app:styleName="navigateNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!text/keyspec_action_next" />
            <key-style
                app:styleName="navigatePreviousMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!text/keyspec_action_previous" />
            <key-style
                app:styleName="navigatePreviousNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!text/keyspec_action_previous,!text/keyspec_action_next" />
            <key-style
                app:styleName="navigateEmojiMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!text/keyspec_emoji_action_key" />
            <key-style
                app:styleName="navigateEmojiNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!text/keyspec_emoji_action_key,!text/keyspec_action_next" />
            <key-style
                app:styleName="navigateEmojiPreviousMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!text/keyspec_emoji_action_key,!text/keyspec_action_previous" />
            <key-style
                app:styleName="navigateEmojiPreviousNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!3,!needsDividers!,!text/keyspec_emoji_action_key,!text/keyspec_action_previous,!text/keyspec_action_next" />
        </case>
        <default>
            <key-style
                app:styleName="navigateNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!icon/next_key|!code/key_action_next" />
            <key-style
                app:styleName="navigatePreviousMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!icon/previous_key|!code/key_action_previous" />
            <key-style
                app:styleName="navigatePreviousNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!icon/previous_key|!code/key_action_previous,!icon/next_key|!code/key_action_next" />
            <key-style
                app:styleName="navigateEmojiMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!text/keyspec_emoji_action_key" />
            <key-style
                app:styleName="navigateEmojiNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!text/keyspec_emoji_action_key,!icon/next_key|!code/key_action_next" />
            <key-style
                app:styleName="navigateEmojiPreviousMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!2,!needsDividers!,!text/keyspec_emoji_action_key,!icon/previous_key|!code/key_action_previous" />
            <key-style
                app:styleName="navigateEmojiPreviousNextMoreKeysStyle"
                app:keyLabelFlags="hasPopupHint|preserveCase"
                app:moreKeys="!fixedColumnOrder!3,!needsDividers!,!text/keyspec_emoji_action_key,!icon/previous_key|!code/key_action_previous,!icon/next_key|!code/key_action_next" />
        </default>
    </switch>
</merge>
